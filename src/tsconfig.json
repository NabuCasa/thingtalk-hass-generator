{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "../dist",
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "types": ["node"],
    "typeRoots": ["./types", "node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
