{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "../dist",
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./lib/**/*", "./types/**/*"],
  "exclude": ["node_modules"]
}
